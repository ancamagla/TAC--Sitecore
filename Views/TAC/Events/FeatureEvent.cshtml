@model RenderingModel

@{ 
    var url = Sitecore.Links.LinkManager.GetItemUrl(Model.Item);
}

<div class="thumbnail">
    <a href="Event-Detail.html">
        @Html.Sitecore().Field("EventImage", new { @class = "img-resposive", mw = 500, mh = 333 })
    </a>
    <div class="caption">
        <h3 class="teaser-heading">@Html.Sitecore().Field("ContentHeading")</h3>
        <p>
          @Html.Sitecore().Field("ContentIntro")
        </p>
        <a href="Event-Detail.html" class="btn btn-default">Read more</a>
    </div>
</div>

<div class="thumbnail well @Model.Renderings.Parameters["Cssclass"]">
    <a href="@url">
        @Html.Sitecore().Field("EventImage", new { @class="img-responsive", mw=500, mh=333})
    </a>
    <div class="caption">
        <h3 class="teaser-heading">@Html.Sitecore().Field("ContentHeading")</h3>
        <p>
           @Html.Sitecore().Field("ContentInfo")
        </p>
        <a href="@url" class="btn btn-default">Read more</a>
    </div>
</div>

<div class="thumbnail">
    <a href="Event-Detail.html">
        <img src="Images/Rock-Climbing-in-the-Czech-Republic.jpg" class="img-responsive" alt="Rock Climbing in the Czech Republic" width="500" height="333" />
    </a>
    <div class="caption">
        <h3 class="teaser-heading">Rock Climbing in the Czech Republic</h3>
        <p>
            This two-day tour begins with a stay at the ancient Karlštejn Castle established by Roman Emperor Charles IV to store crowned jewels and holy relics. After our castle stay, we will move on to Cesky Raj, whose translates into Bohemian Paradise, the oldest nature reserve in the Czech Republic.
        </p>
        <a href="Event-Detail.html" class="btn btn-default">Read more</a>
    </div>
</div>